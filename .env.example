# Azure AI Language Service (for PII/PHI detection)
AZURE_LANGUAGE_ENDPOINT=https://your-language-service.cognitiveservices.azure.com/
AZURE_LANGUAGE_KEY=your_language_service_key_here

# Azure AI Foundry (for Agent Service with Bing Grounding)
AZURE_AI_FOUNDRY_PROJECT_CONNECTION_STRING=your_project_connection_string_here
# Alternative: Individual components
# AZURE_AI_FOUNDRY_ENDPOINT=https://your-foundry-project.cognitiveservices.azure.com/
# AZURE_AI_FOUNDRY_API_KEY=your_foundry_api_key_here
# AZURE_AI_FOUNDRY_PROJECT_NAME=your-project-name

# Bing Grounding Connection (required for web grounding)
# Must be created manually in AI Foundry portal after deployment
# Run: python scripts/setup-bing-grounding.py for setup instructions
BING_CONNECTION_ID=your_bing_connection_id_here

# Azure API Management (Optional - if using APIM gateway)
AZURE_APIM_ENDPOINT=https://your-apim.azure-api.net
AZURE_APIM_SUBSCRIPTION_KEY=your_apim_subscription_key_here

# Application Configuration
# PII Detection Mode: "redact" or "reject"
PII_DETECTION_MODE=redact

# Confidence threshold for PII detection (0.0 to 1.0)
PII_CONFIDENCE_THRESHOLD=0.8

# Enable/Disable Bing Grounding
ENABLE_WEB_GROUNDING=true

# Logging
LOG_LEVEL=INFO

# Streamlit Configuration (optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
